#!/usr/bin/python
# -*- coding:utf-8 -*-

import logging
import os
from nose.plugins import Plugin
log = logging.getLogger('nose.plugins.testplugin')

class TestPlugin(Plugin):
    name = 'testplugin'
    def options(self, parser, env=os.environ):
        super(TestPlugin, self).options(parser, env=env)

    def configure(self, options, conf):
        super(TestPlugin, self).configure(options, conf)
        if not self.enabled:
            return

    def finalize(self, result):
        log.info('test pluginized demo!')
